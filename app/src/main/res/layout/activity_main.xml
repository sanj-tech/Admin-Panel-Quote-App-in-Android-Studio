<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:id="@+id/drawer"

    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/Theme.AppCompat.Light"/>

    </com.google.android.material.appbar.AppBarLayout>

        <Button android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#FFF8DC"
        android:fontFamily="@font/alef"
        android:onClick="contactUS"
        android:padding="20dp"
            android:textColor="#ffffff"
        android:text="Contact US" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#FFF8DC"
        android:fontFamily="@font/alef"
        android:onClick="openAboutUs"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:text="About US" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#FFF8DC"
        android:fontFamily="@font/alef"
        android:onClick="openQuotes"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:text="Quotes" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#FFF8DC"
        android:fontFamily="@font/alef"
        android:onClick="openImageInsertActivity"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:text="Insert Image Quotes" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#FFF8DC"
        android:fontFamily="@font/alef"
        android:onClick="openViewInquiryActivity"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:text="View Inquiry" />

</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/mainmenu"
        android:layout_gravity="start"

        app:headerLayout="@layout/header"
        >

    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>